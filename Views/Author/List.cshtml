@model List<AuthorViewModel>

<div class="container mt-4">
    <h4 class="mb-4 text-danger">Yazar Listesi</h4>

    <table class="table table-striped table-hover shadow-sm">
        <thead class="bg-danger text-white">
            <tr>
                <th class="text-danger">Ad Soyad</th>
                <th class="text-danger">Doğum Tarihi</th>
                <th class="text-danger text-center">İşlemler</th>
            </tr>
        </thead>
        <tbody class="bg-light">
            @foreach (var author in Model)
            {
                <tr>
                    <td>@author.FullName</td>
                    <td>@author.DateOfBirth.ToShortDateString()</td>
                    <td class="text-center">
                        <a asp-controller="Author" asp-action="Details" asp-route-id="@author.Id" class="btn btn-info btn-sm">
                            <i class="bi bi-eye"></i> Detaylar
                        </a>
                        <a asp-controller="Author" asp-action="Update" asp-route-id="@author.Id" class="btn btn-warning btn-sm">
                            <i class="bi bi-pencil"></i> Güncelle
                        </a>
                        <a asp-controller="Author" asp-action="Delete" asp-route-id="@author.Id" class="btn btn-danger btn-sm" onclick="return confirm('Bu yazarı silmek istediğinizden emin misiniz?');">
                            <i class="bi bi-trash"></i> Sil
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
