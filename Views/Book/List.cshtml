@model List<BookListViewModel>

    <partial name ="_BannerPartial" />
<div class="text-center mt-4">
    <a class="btn btn-danger" asp-controller="Book" asp-action="Create">Kitap Ekle</a>
    <a class="btn btn-secondary" asp-controller="Author" asp-action="Create">Yazar Ekle</a>
</div>

<div class="container mt-4">
    <h4 class="mb-4 text-danger">Kitap Listesi</h4>

    <table class="table table-striped table-hover shadow-sm">
        <thead class="bg-danger text-white">
            <tr>
                <th class="text-danger">Başlık</th>
                <th class="text-danger">Yazar</th>
                <th class="text-danger">Tür</th>
                <th class="text-danger">Yayın Tarihi</th>
                <th class="text-danger">ISBN</th>
                <th class="text-danger">Kopya Sayısı</th>
                <th class="text-danger text-center">İşlemler</th>
            </tr>
        </thead>
        <tbody class="bg-light">
            @foreach (var book in Model)
            {
                <tr>
                    <td>@book.Title</td>
                    <td>@book.AuthorName</td>
                    <td>@book.Genre</td>
                    <td>@book.PublishDate.ToShortDateString()</td>
                    <td>@book.ISBN</td>
                    <td>@book.CopiesAvailable</td>
                    <td class="text-center">
                        <a asp-controller="Book" asp-action="Details" asp-route-id="@book.Id"  class="btn btn-info btn-sm">
                            <i class="bi bi-eye"></i> Detaylar
                        </a>
                        <a asp-controller="Book" asp-action="Update" asp-route-id="@book.Id" class="btn btn-warning btn-sm">
                            <i class="bi bi-pencil"></i> Güncelle
                        </a>
                        <a asp-controller="Book" asp-action="Delete" asp-route-id="@book.Id" class="btn btn-danger btn-sm" onclick="return confirm('Bu kitabı silmek istediğinizden emin misiniz?');">
                            <i class="bi bi-trash"></i> Sil
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
