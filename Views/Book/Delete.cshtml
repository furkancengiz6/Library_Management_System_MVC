@model Book


<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-danger text-white">
            <h3><i class="bi bi-exclamation-triangle-fill"></i> Kitap Sil</h3>
        </div>
        <div class="card-body">
            <p class="fs-5"> "<strong>@Model.Title</strong>" kitabını silmek istediğinize emin misiniz?</p>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />

                
                <div class="mb-3">
                    <label class="form-label">Başlık</label>
                    <input asp-for="Title" class="form-control" disabled /> @*disabled yapıldı.input alanı sadece görüntülenebilir*@
                </div>

                

                <div class="mb-3">
                    <label class="form-label">Tür</label>
                    <input asp-for="Genre" class="form-control" disabled />
                </div>

                
                <div class="mb-3">
                    <label class="form-label">ISBN</label>
                    <input asp-for="ISBN" class="form-control" disabled />
                </div>

              
                <div class="mb-3">
                    <label class="form-label">Mevcut Kopya</label>
                    <input asp-for="CopiesAvailable" class="form-control" disabled />
                </div>

                
                <div class="d-flex justify-content-center gap-3">
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Sil
                    </button>
                    <a asp-controller="Book" asp-action="List" class="btn btn-dark">
                        <i class="bi bi-arrow-left"></i> İptal
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
